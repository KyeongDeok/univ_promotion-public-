<table>
    <thead>
        <tr>
            <th>제목</th>
            <th>내용</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= link_to post.title, (@bulletin.present? ? [post.bulletin, post] : post) %></td>
            <td><%= link_to post.content, (@bulletin.present? ? [post.bulletin, post] : post) %></td>
            <td><%= link_to post.impressionist_count, (@bulletin.present? ? [post.bulletin, post] : post) %></td>
        </tr>
        <% end %>
    </tbody>
</table>