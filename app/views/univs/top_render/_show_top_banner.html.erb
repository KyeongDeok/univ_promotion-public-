<div class="univ_board_background_with_img d-md-none" style="background-image: url('<%= asset_path "campus/#{univ.img_name}.jpg" %>')">
<% else %>
<div class="univ_board_background_with_img d-md-none" style="background-image: url('<%= asset_path "campus/campus-normal.jpg" %>')">
<% end %>
    <div class="univ_board_background-black-mobile">
        <div class="container" align="center">
            <% if (univ.logo_image.present?) %>
            <div><img style="min-width: 150px; max-width: 150px;" src="<%= @univ.logo_image %>"></div>
            <% elsif (Rails.application.assets.find_asset "campus_logo/#{univ.img_name}.png") != nil %>
            <div><img style="min-width: 150px; max-width: 150px;" src="<%= asset_path "campus_logo/#{univ.img_name}" %>"></div>
            <% end %>
            <div class="wow fadeInUp" style="font-size: 25px; color: white; margin-top: 30px;"><%= univ.univ_name_kor %></div>
            <div class="wow fadeInUp" style="font-size: 15px; color: white;"><%= univ.univ_name_eng %></div>
            <div style="margin-top: 35px; font-size: 15px; color: white;"><span class="counter" style="font-size: 30px; color: #4bff09"><%= @univs_true.to_i %></span> 개의 혜택을 누려보세요!</div>
        </div>
    </div>
</div>

<script src="/jquery_1.7.2/jquery_1.7.2.js"></script>
<script src="/counter-up/waypoints.min.js"></script>
<script src="/counter-up/jquery.counterup.min.js"></script>
<script>
$('.counter').counterUp({
  delay: 10,
  time: 1000
});
</script>